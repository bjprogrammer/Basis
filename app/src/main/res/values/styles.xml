<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/transparent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <style name="toolbar_title_style" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MyApp.PopupMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="warningToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@android:color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/error</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/warning</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">22dp</item>
    </style>

</resources>
